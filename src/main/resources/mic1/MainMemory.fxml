<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="mic1.controller.MainMemoryController" prefHeight="450.0" prefWidth="800.0" 
            styleClass="root-pane" stylesheets="@MainMemory.css" 
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            
            <Label prefHeight="70.0" text="Main Memory" styleClass="title-label">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </Label>
            
            <AnchorPane VBox.vgrow="ALWAYS" styleClass="table-container">
               <children>
                  <TableView fx:id="memoryTable" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                     <columns>
                        <TableColumn fx:id="addressColumn" editable="false" text="Address" />
                        <TableColumn fx:id="binaryColumn" editable="false" text="Binary Value (C2)" />
                        <TableColumn fx:id="decimalColumn" editable="false" text="Decimal Value" />
                        <TableColumn fx:id="hexColumn" editable="false" text="Hexadecimal Value" />
                     </columns>
                     
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_ALL_COLUMNS" />
                     </columnResizePolicy>
                     
                  </TableView>
               </children>
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" />
               </VBox.margin>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</AnchorPane>